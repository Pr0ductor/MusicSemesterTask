@section Scripts {
    <script>
    $(document).ready(function() {
        // Инициализация текущих фильтров из URL
        var urlParams = new URLSearchParams(window.location.search);
        var currentFilters = {
            country: urlParams.get('country') || '',
            genre: urlParams.get('genre') || '',
            searchQuery: urlParams.get('searchQuery') || '',
            sortBy: urlParams.get('sortBy') || ''
        };
        
        function updateSongs() {
            var url = '@Url.Action("Index", "Songs")';
            var params = new URLSearchParams();
            
            // Добавляем только непустые фильтры
            Object.entries(currentFilters).forEach(([key, value]) => {
                if (value) {
                    params.append(key, value);
                }
            });
            
            var queryString = params.toString();
            if (queryString) {
                url += '?' + queryString;
            }
            
            $.ajax({
                url: url,
                type: 'GET',
                headers: { 'X-Requested-With': 'XMLHttpRequest' },
                success: function(response) {
                    $('#songs-container').html(response);
                    if (typeof feather !== 'undefined') {
                        feather.replace();
                    }
                    // Обновляем URL без перезагрузки страницы
                    window.history.pushState({}, '', url);
                    
                    // Обновляем активные классы фильтров
                    updateActiveFilters();
                },
                error: function(xhr, status, error) {
                    console.error('Error updating songs:', error);
                }
            });
        }
        
        function updateActiveFilters() {
            // Обновляем активные классы для всех фильтров
            $('.filter-link').each(function() {
                var filterType = $(this).data('filter');
                var filterValue = $(this).data('value') || '';
                
                if (currentFilters[filterType] === filterValue) {
                    $(this).addClass('active');
                } else {
                    $(this).removeClass('active');
                }
            });
        }
        
        // Обработчик клика по фильтрам
        $('.filter-link').click(function(e) {
            e.preventDefault();
            var filterType = $(this).data('filter');
            var filterValue = $(this).data('value') || '';
            
            // Если кликнули на уже активный фильтр - сбрасываем его
            if (currentFilters[filterType] === filterValue) {
                currentFilters[filterType] = '';
            } else {
                currentFilters[filterType] = filterValue;
            }
            
            updateSongs();
        });
        
        // Инициализация активных фильтров при загрузке страницы
        updateActiveFilters();
    });
    </script>
