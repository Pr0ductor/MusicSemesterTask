@section Scripts {
    <script>
        $(document).ready(function() {
            const urlParams = new URLSearchParams(window.location.search);
            
            function updateFilters(country, genre) {
                const params = new URLSearchParams();
                if (country) params.set('country', country);
                if (genre) params.set('genre', genre);
                
                const newUrl = window.location.pathname + (params.toString() ? '?' + params.toString() : '');
                history.pushState({}, '', newUrl);
                
                $.get('@Url.Action("Index")', { country: country, genre: genre }, function(data) {
                    $('#songs-container').html(data);
                    if (typeof feather !== 'undefined') {
                        feather.replace();
                    }
                });
            }
            
            $('.dropdown-item').click(function(e) {
                e.preventDefault();
                const $this = $(this);
                const filter = $this.data('filter');
                const value = $this.data('value');
                
                $this.closest('.dropdown-menu').find('.dropdown-item').removeClass('active');
                $this.addClass('active');
                
                const buttonText = value || (filter === 'country' ? 'All countries' : 'All genres');
                $this.closest('.dropdown').find('button span').text(buttonText);
                
                const currentCountry = filter === 'country' ? value : urlParams.get('country') || '';
                const currentGenre = filter === 'genre' ? value : urlParams.get('genre') || '';
                
                updateFilters(currentCountry, currentGenre);
            });
            
            // Инициализация состояния фильтров
            const initialCountry = urlParams.get('country');
            const initialGenre = urlParams.get('genre');
            
            if (initialCountry) {
                $(`[data-filter="country"][data-value="${initialCountry}"]`).addClass('active')
                    .closest('.dropdown').find('button span').text(initialCountry);
            }
            if (initialGenre) {
                $(`[data-filter="genre"][data-value="${initialGenre}"]`).addClass('active')
                    .closest('.dropdown').find('button span').text(initialGenre);
            }
        });
    </script>
}





