                <button class="btn btn-outline-primary w-sm dropdown-toggle" data-toggle="dropdown">
                    <span>@(string.IsNullOrEmpty(Context.Request.Query["country"]) ? "All countries" : Context.Request.Query["country"])</span>
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item @(string.IsNullOrEmpty(Context.Request.Query["country"]) ? "active" : "")" 
                       data-filter="country" data-value="">All countries</a>
                    @foreach (Country country in Enum.GetValues(typeof(Country)))
                    {
                        <a class="dropdown-item @(Context.Request.Query["country"].ToString() == country.ToString() ? "active" : "")" 
                           data-filter="country" data-value="@country">@country</a>
                    }
                </div>
            </div>
            <div class="dropdown">
                <button class="btn btn-outline-primary w-sm dropdown-toggle" data-toggle="dropdown">
                    <span>@(string.IsNullOrEmpty(Context.Request.Query["genre"]) ? "All genres" : Context.Request.Query["genre"])</span>
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item @(string.IsNullOrEmpty(Context.Request.Query["genre"]) ? "active" : "")" 
                       data-filter="genre" data-value="">All genres</a>
                    @foreach (Genre genre in Enum.GetValues(typeof(Genre)))
                    {
                        <a class="dropdown-item @(Context.Request.Query["genre"].ToString() == genre.ToString() ? "active" : "")" 
                           data-filter="genre" data-value="@genre">@genre</a>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="padding">
